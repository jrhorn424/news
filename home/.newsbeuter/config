# vim-like navigation
bind-key j       down
bind-key k       up
bind-key h       left
bind-key l       right
bind-key m       toggle-show-read-feeds
bind-key "SPACE" open

browser                 open
user-agent              "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_9_3) AppleWebKit/537.75.14 (KHTML, like Gecko) Version/7.0.3 Safari/7046A194A"

auto-reload             no
confirm-exit            yes
datetime-format         "%Y-%m-%d %R"
goto-next-feed          no
max-items               1000
prepopulate-query-feeds yes
refresh-on-startup      no
reload-threads          4
save-path               "~/Downloads"
show-read-articles      yes
show-read-feeds         yes
suppress-first-reload   yes
text-width              78

ignore-article          "*" "title =~ \"Sponsor\""
ignore-article          "*" "title =~ \"Advertisement\""
ignore-mode             "display"

# Podbeuter config
download-path "~/Podcasts/%n"
max-downloads 4
player        mplayer

# formatting
articlelist-format "%4i %f %D  %?T?|%-17T| ?%t"

# Dark solarized color scheme for newsbeuter, based on
# Ethan Schoonover's Solarized.
#
# In order to use this color scheme, you must first configure
# your terminal emulator to use the Solarized palette.
# See <http://ethanschoonover.com/solarized/> for more information.

color background        default default
color info              default default bold
color listnormal        default default
color listfocus         blue    default
color listnormal_unread red     default
color listfocus_unread  blue    default
color article           default default
